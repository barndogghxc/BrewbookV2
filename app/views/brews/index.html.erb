<% provide(:title, 'Upcoming Brews') %>
<h1>Upcoming Brews</h1>
 
 <%= link_to new_brew_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New Brew 
<% end %>
<table>
  <tr>
    <th>Date</th>
    <th>Kind</th>
  </tr>
 
  <% @brews.each do |brew| %>
    <tr>
      <td><%= brew.date %></td>
      <td><%= brew.kind %></td>
      <td><%= link_to 'Show', brew_path(brew), class: 'btn btn-primary btn-xs' %></td>
      <td><%= link_to 'Edit', edit_brew_path(brew), class: 'btn btn-info btn-xs' %></td>
      <td><%= link_to 'Destroy', brew_path(brew),
              method: :delete,
              data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Back', schedules_path %>
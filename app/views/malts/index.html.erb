<% provide(:title, 'All malts') %>
<h1>Listing malts</h1>
 
 <%= link_to new_malt_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New Malt
<% end %>
<table>
  <tr>
    <th>Kind</th>
    <th>Amount</th>
  </tr>
 
  <% @malts.each do |malt| %>
    <tr>
      <td><%= malt.kind %></td>
      <td><%= malt.amount %></td>
      <td><%= link_to 'Show', malt_path(malt), class: 'btn btn-primary btn-xs' %></td>
      <td><%= link_to 'Edit', edit_malt_path(malt), class: 'btn btn-info btn-xs' %></td>
      <td><%= link_to 'Destroy', malt_path(malt),
              method: :delete,
              data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Back', materials_path %>
<% provide(:title, 'Upcoming Cleans') %>
<h1>Upcoming Cleans</h1>
 
 <%= link_to new_clean_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New Clean 
<% end %>
<table>
  <tr>
    <th>Date</th>
    <th>Kind</th>
  </tr>
 
  <% @cleans.each do |clean| %>
    <tr>
      <td><%= clean.date %></td>
      <td><%= clean.kind %></td>
      <td><%= link_to 'Show', clean_path(clean), class: 'btn btn-primary btn-xs' %></td>
      <td><%= link_to 'Edit', edit_clean_path(clean), class: 'btn btn-info btn-xs' %></td>
      <td><%= link_to 'Destroy', clean_path(clean),
              method: :delete,
              data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Back', schedules_path %>
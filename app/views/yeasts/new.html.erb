<% provide(:title, 'Yeast') %>
<h1>New Yeast</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@yeast, url: yeasts_path) do |f| %>
    
      <%= f.label :kind %>
      <%= f.text_field :kind, class: 'form-control' %>


      <%= f.label :amount %>
      <%= f.text_field :amount, class: 'form-control'  %>

      <%= f.submit "Create new yeast", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>